
@model AcademicStaff.Models.Entities.Publication

@{
    ViewBag.Title = "Details";
}

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    @Model.Title
                </h1>

            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start post-content Area -->
<section class="post-content-area single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">
                            @*<img class="img-fluid" src="~/Content/AdminLTE/dist/img/bg-6.jpg" alt="">*@

                            @if (Model.Image != null)
                            {
                                <img class="img-fluid" src="@Url.Content(Model.Image)" alt="">

                            }
                            else
                            {
                                <img class="img-fluid" src="~/Content/AdminLTE/dist/img/bg-6.jpg" alt="">
                            }

                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12">
                        <div class="quotes">
                            <p class="meta">Publish Date @Model.DateCreated.ToString("dd MMM yyyy") </p>
                            <h3 class="mt-20 mb-20">@Model.Title</h3>
                            <p class="excert">
                                @Html.Raw(Model.Abstract)
                            </p>

                        </div>
                    </div>

                </div>

               
            </div>

        </div>
    </div>
</section>
<!-- End post-content Area -->
