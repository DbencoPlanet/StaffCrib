@model IEnumerable<AcademicStaff.Models.Entities.ImageGallery>


@{
    ViewBag.Title = "Gallery";
}



<!-- Start popular-courses Area -->

        <!-- start banner Area -->
        <section class="banner-area relative about-banner" id="home">
            <div class="overlay overlay-bg"></div>
            <div class="container">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="about-content col-lg-12">
                        <h1 class="text-white">
                            GALLERY
                        </h1>

                    </div>
                </div>
            </div>
        </section>
        <!-- End banner Area -->



        <section class="gallery-area section-gap" id="gallery">
            @*<div class="title text-center pb-70">
                    <h1 class="mb-10">Gallery</h1>

                </div>*@
            <div class="container">
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var image in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <a href="data:image/jpg;base64,@(Convert.ToBase64String(image.Content))" class="img-gal">
                                    <div class="single-imgs relative">
                                        <div class="overlay overlay-bg"></div>
                                        <div class="relative">

                                            @if (image.Content != null)
                                            {

                                                <img data-u="image" src="data:image/jpg;base64,@(Convert.ToBase64String(image.Content))" data-thumb="data:image/jpg;base64,@(Convert.ToBase64String(image.Content))" class="img-fluid" alt="" style="width:400px; height:220px;"/>
                                            }


                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }


                </div>
            </div>
        </section>
   
<!-- End popular-courses Area -->
