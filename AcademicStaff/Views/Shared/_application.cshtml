<!DOCTYPE html>
<html>
<head>

    <!-- Meta Tags -->
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    @Scripts.Render("~/bundles/modernizr")
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="description" content="ACADEMIC STAFF | Staff Registration" />
    <meta name="keywords" content="academy, ICT, Business, technical, elearning, networking," />
    <meta name="author" content="" />

    <!-- Page Title -->
    <title>Apply | ACADEMIC STAFF</title>

    <!-- Favicon and Touch Icons -->
    <link rel="icon" href="~/Content/images/ico.jpg" type="image/x-icon">
    <!-- Stylesheet -->
    <link href="~/Content/Admin/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/Admin/css/animate.css" rel="stylesheet" />
    <link href="~/Content/Admin/css/css-plugin-collections.css" rel="stylesheet" />

    <!-- CSS | menuzord megamenu skins -->
    <link href="~/Content/Admin/css/menuzord-skins/menuzord-rounded-boxed.css" rel="stylesheet" />
    <!-- CSS | Main style file -->
    <link href="~/Content/Admin/css/style-main.css" rel="stylesheet" />
    <!-- CSS | Preloader Styles -->
    <link href="~/Content/Admin/css/preloader.css" rel="stylesheet" />
    <!-- CSS | Custom Margin Padding Collection -->
    <link href="~/Content/Admin/css/custom-bootstrap-margin-padding.css" rel="stylesheet" />
    <!-- CSS | Responsive media queries -->
    <link href="~/Content/Admin/css/responsive.css" rel="stylesheet" />
    <!-- CSS | Style css. This is the file where you can place your own custom css code. Just uncomment it and use it. -->
    <!-- <link href="css/style.css" rel="stylesheet" type="text/css"> -->
    <!-- CSS | Theme Color -->
    @RenderSection("Style", required: false)
    <style>
        .navbar-inverse .navbar-nav > li > a {
            color: antiquewhite !important;
            font-weight: 700;
        }

        .navbar-inverse .navbar-toggle {
            border-color: antiquewhite !important;
            border-radius: 0 !important;
        }

        ul {
            list-style-type: square !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#1648bf;color:#ffffff;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/">
                    <img src="~/Content/images/logo.png" class="img-responsive" style="margin-top:10px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Initializer", "Initializer", "JobApplications")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container" style="margin-top:70px;">
        @RenderBody()

    </div>
    <div class="footer-bottom" data-bg-color="#2f2f2f" style="background-color:#000000;color:antiquewhite;padding:30px;margin-top:30px;">
        <div class="container pt-15 pb-10">
            <div class="row">
                <div class="col-md-6">
                    <p class="font-11 text-black-777 m-0">Copyright &copy;@DateTime.Now.Year ACADEMIC STAFF POWERED BY GROUP 1.All Rights Reserved</p>
                </div>

            </div>
        </div>
    </div>


    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    
    @RenderSection("scripts", required: false)
</body>
</html>
