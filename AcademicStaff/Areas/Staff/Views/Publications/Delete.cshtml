
@model AcademicStaff.Models.Entities.Publication


@{
    ViewBag.Title = "Delete Publication";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}
<div class="row">
    <div class="col-md-3 col-sm-3"></div>
    <div class="col-md-6 col-sm-3">
        <div class="box box-default">
            <div class="box-header with-border">
                <i class="fa fa-warning"></i>

                <h3 class="box-title">Delete Publication</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">

                    <h4>
                        <i class="icon fa fa-ban"></i> Alert! Are you sure you want to delete this?
                    </h4>
                    <dl class="dl-horizontal">



                        <dt>
                            Publication Title
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            Publication Abstract
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Abstract)
                        </dd>

                       
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color btn-delete">
                            <input type="submit" value="Delete" class="btn btn-warning" /> &nbsp;
                            <a href="javascript: history.back()" class="btn btn-default">Cancel</a>

                        </div>
                    }


                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->


    <div class="col-md-3 col-sm-3"></div>

</div>
