@model IEnumerable<AcademicStaff.Models.Entities.Department>


@{
    ViewBag.Title = "Deaprtments";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-home"></i> Department Management</h3>

                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["success"]
                    </div>
                }

            </div>


            <div class="box-body">
                <div class="btn-group pull-right">

                    @Html.ActionLink("Create Department", "Create", null, new { @class = "btn btn-primary" })
                </div>

            </div>

            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">

                    <thead>
                        <tr>
                            <th>S/No</th>
                            <th> @Html.DisplayNameFor(model => model.Name)</th>
                            <th> @Html.DisplayNameFor(model => model.ShortCode)</th>
                            <th>@Html.DisplayNameFor(model => model.School.Name)</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.Name)</td>
                            <td> @Html.DisplayFor(modelItem => item.ShortCode)</td>
                            <td> @Html.DisplayFor(modelItem => item.School.Name)</td>
                            <td>

                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Action
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li class="text-color-success">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, null)</li>
                                        <li class="text-color-success">@Html.ActionLink("Details", "Details", new { id = item.Id }, null)</li>
                                        <li class="text-color-success">@Html.ActionLink("Delete", "Delete", new { id = item.Id }, null)</li>


                                    </ul>
                                </div>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




@section Style {

    <link rel="stylesheet" href="~/Content/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/AdminLTE/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/AdminLTE/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

}

@section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}

