@model AcademicStaff.Models.Entities.School

@{
    ViewBag.Title = "Edit School";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class="row">
    <!-- left column -->
    <div class="col-md-2 col-sm-2 "></div>
    <div class="col-md-8 col-sm-8">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit School </h3>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        @TempData["error"]
                    </div>
                }

            </div>
            @using (Html.BeginForm("Edit", "Schools", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", area = "Admin" }))
            {
                @Html.AntiForgeryToken()

                <div class="box-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Image)


                    <div class="form-group">

                        <div class="">
                            <input type="file" name="pictures" class="form-control" />
                        </div>
                    </div>

                    @*<div class="form-group">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "" })
                    <div class="">
                        <input type="file" name="picture" class="form-control" />
                    </div>
                </div>*@

                    @*<div class="form-group">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "" })
                    <div class="">
                        <input type="file" class="form-control" id="ImageFile" name="ImageFile" style="margin-bottom:20px;" accept=".png,.jpg,.jpeg" />
                    </div>
                </div>*@

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ShortCode, htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.ShortCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ShortCode, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="javascript: history.back()" class="btn btn-default">Cancel</a>
                </div>

            }
        </div>

    </div>
    <div class="col-md-2 col-sm-2"></div>

</div>


@section Scripts {
    <!-- DataTables -->
    @Scripts.Render("~/bundles/jqueryval")

}


