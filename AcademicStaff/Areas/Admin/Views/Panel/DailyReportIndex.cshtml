@model IEnumerable<AcademicStaff.Models.Entities.DailyReport>


@{
    ViewBag.Title = "Daily Report";
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="box" style="padding:7px;">
            <div class="box-header" style="margin-bottom:15px;">
                <h3 class="box-title"><i class="fa fa-fw fa-file-text-o"></i>Staff Daily Report </h3>


            </div>

            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table id="example1" class="table table-bordered table-hover" border="1">

                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>STAFF NAME</th>
                            <th> DATE OF REPORT </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sno = 0;
                        }
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>
                                @if (item.Profile != null)
                                {
                                    @item.Profile.Fullname

                                }
                            </td>
                            <td> @item.ReportDate.Value.ToString("ddd dd MMM, yyyy")</td>
                           
                            @*<td>@Html.Raw(item.Content.Substring(0, 100))</td>*@

                            <td>
                                @Html.ActionLink("Details", "DailyReportDetails", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @*<div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Action
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li class="text-color-success">@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                </ul>
            </div>*@

                            </td>
                        </tr>
                                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>




@section Style {

    <link rel="stylesheet" href="~/Content/AdminLTE/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Content/AdminLTE/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/AdminLTE/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>


}


@section Scripts2 {
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}
